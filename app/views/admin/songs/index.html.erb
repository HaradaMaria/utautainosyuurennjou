<!--メイン部分-->


  <h1 class="justify-content-center text-center">曲一覧</h1>
  
  <!--検索フォーム-->
  <%= form_with url: admin_search_path(@songs), method: :get, local: false do|f| %>
      <div class="field justify-content-center text-center">
        <%= f.text_field :ward %>
        <%= f.select :colmn, options_for_select([['曲名'], ['アーティスト名'], ['作詞者名'], ['作曲者名']]) %>
      </div>
      <div class="row justify-content-around">
        <div class="text-center">
          <%= f.submit "曲を検索", class: "btn btn-submit"%>
        </div>
        <!--%= link_to new_song_path, class: "btn btn-primary" do%>-->
        <!--  <div>新曲登録</div>-->
        <!--% end %>-->
      </div>
  <% end %>


