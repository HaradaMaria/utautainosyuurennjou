  <table class="table text-light text-center">
    <thead>
      <th>曲名</th>
      <th>記録日時</th>
      <th>点数</th>
      <th>キー</th>
      <th></th>
    </thead>
    <tbody>
      <% records.each do |record| %>
        <tr>
          <td><%= record.song.name %></td>
          <td>
            <%= link_to song_record_path(@song,record) do%>
            <%= record.created_at.strftime("%y/%m/%d %H:%M") %>
            <% end %>
            </td>
          <td><%= number_with_precision(record.score, precision: 2) %></td>
          <td><%= record.key %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>