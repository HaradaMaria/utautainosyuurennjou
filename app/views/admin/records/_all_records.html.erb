  <div class="col-12">
    <table class=" col-12 text-center">
      <thead>
        <th class="col-3">会員名</th>
        <th class="col-4">曲名</th>
        <th class="col-3">記録日時</th>
        <th class="col-2">点数</th>
      </thead>
      <tbody>
        <% records.each do |record| %>
          <tr>
            <td><%= record.user.name %></td>
            <td><%= record.song.name %></td>
            <td>
              <%= link_to admin_song_record_path(@song,record) do%>
              <%= record.created_at.strftime("%y/%m/%d %H:%M") %>
              <% end %>
            </td>
            <td><%= number_with_precision(record.score, precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
      
    </table>
    <%= paginate @all_records, :param_name => 'all_records', remote: true %>
  </div>