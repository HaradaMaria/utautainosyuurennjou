<!--メイン部分-->
  <h1>会員情報</h1>
  <table class="table text-light text-center">
    <thead>
      <tr>
        <th class="col-4">会員名</th>
        <th class="col-4">email</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to edit_user_path(@user), class: "btn btn-primary" do%>
      <div>編集する</div>
    <% end %>
  </div>

  <!--記録テーブル-->
  <div>
  <%= render 'layouts/user_records', records: @user_records%>
  </div>
