<!--メイン部分-->
  <%= flash[:notice] %>
  <h1 class="row">修練者情報</h1>
  <div class="row">
    <div class="col-10">
      <table class="text-center">
        <thead>
          <tr>
            <th class="col-4">会員名</th>
            <th class="col-4">email</th>
          </tr>
        </thead>
    
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-2">
      <%= link_to edit_user_path(@user), class: "btn btn-primary" do%>
        <div>編集</div>
      <% end %>
    </div>
  </div>

  <!--記録テーブル-->
  <div class="fs-3">あなたの記録</div>
  <!--グラフ-->
  <div class="w‐100 graph-area">
    <%= render 'layouts/line_graph' %>
  </div>
  
  <div class="row col-12" id="show_user_records">
  <%= render 'public/records/user_records', records: @user_records%>
  </div>
