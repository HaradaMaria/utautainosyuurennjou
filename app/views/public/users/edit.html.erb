<!--メイン部分-->
<h1 class="justify-content-center text-center">会員情報編集</h1>
<%= form_with model: @user, url: user_path do |f| %>
  <div class="field justify-content-center text-center">
    <%= f.label :name, "ニックネーム"%><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field justify-content-center text-center">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="action justify-content-center text-center">
    <%= f.submit "情報を更新する", class: "btn btn-submit" %>
  </div>
<% end %>
  
  <div class="justify-content-center text-center">
    <%= link_to users_check_path(@user), class: "btn btn-caution" do%>
      <div>修練を取り止める</div>
    <% end %>
  </div>